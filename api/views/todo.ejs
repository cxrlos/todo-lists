    <body>
        <div
      class="d-flex align-items-center justify-content-center flex-column"
    >
    <div class= "container">
    <div class= "row pt-4">
      <h3 class="display-">Your To Do List: </h3>
    </div>
    <div class= "row pt-4">
      <div class="d-flex align-items-center mb-4 ">
        <div class="form-group mr-2 mb-2">
        <form action="/" method="POST" class="post-form">
             <input
            type="text"
            name="content"
            class="form-control"
            placeholder="Enter a task title"
          />
          <input
          type="text"
          name="description"
          class="form-control"
          placeholder="Enter a task description"
        />
        </div>
        <button
          type="submit"
          class="btn btn-info mr-3"
        >
          Save
        </button>
    </form>
    </div>
</div>
<div class= "row">

      <div class="table-wrapper">
        <table class="table table-hover table-bordered table-dark">
          <thead >
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Description</th>
              <th scope="col">Status</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% todoTasks.forEach(details => { %>
                <tr>
                    <td><%= details.content %>  </td>
                    <td class="todo-list-item-name">
                        <%= details.description %>           
                   </td>
                    <td><%= details.status%> </td>
                    <td>
                      <button class="btn btn-danger" onclick="location.href ='/delete/<%= details._id %>'">
                        Delete
                      </button>
                      <button class="btn btn-info" onclick="location.href = '/edit/<%= details._id %>'">
                        Edit
                      </button>
                      <button class="btn btn-success" onclick="location.href = '/completed/<%= details._id %>'">
                        Finished
                      </button>
                      </td>
                  </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
    </div>
